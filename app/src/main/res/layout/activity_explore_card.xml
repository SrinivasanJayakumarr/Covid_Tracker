<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    android:gravity="center"
    tools:context=".Explore_card">

    <LinearLayout
        android:id="@+id/LL1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:elevation="@dimen/_10sdp"
        android:layout_margin="@dimen/_5sdp">
    
    <androidx.cardview.widget.CardView
        android:id="@+id/card_ap"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_180sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_15sdp">

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_navigation"
            android:elevation="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_65sdp"
            android:contentDescription="@string/app_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/airport"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_40sdp"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quaran"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_22sdp"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total"
            android:layout_gravity="center"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginEnd="@dimen/_25sdp"/>

        <TextView
            android:id="@+id/ap_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/count_tot"
            android:layout_gravity="center"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/_25sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/active"
            android:layout_gravity="center"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginEnd="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_20sdp"/>

        <TextView
            android:id="@+id/ap_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/count_act"
            android:layout_gravity="center"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            android:textColor="@color/tn_font_blue"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_20sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recovered"
            android:layout_gravity="center"
            android:textSize="@dimen/_11ssp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginEnd="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_40sdp"/>

        <TextView
            android:id="@+id/ap_recovered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/count_rec"
            android:layout_gravity="center"
            android:textSize="@dimen/_11ssp"
            android:textStyle="bold"
            android:textColor="@color/green_color"
            android:layout_marginStart="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_40sdp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_mostaffec"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_180sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_8sdp"
        app:cardBackgroundColor="@color/bg_blue_color"
        app:cardCornerRadius="@dimen/_15sdp">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            app:lottie_rawRes="@raw/msearchlocation"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_25sdp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_city"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="@dimen/_12ssp"
            android:layout_marginTop="@dimen/_10sdp"/>

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_150sdp"
            android:layout_marginStart="@dimen/_90sdp"
            android:src="@drawable/ic_arrow_right_circle"
            android:contentDescription="TODO" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_s2"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_60sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_15sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_13sdp"
            android:text="@string/population"
            android:textColor="@color/tn_font_blue"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="@string/popu_count"
            android:textColor="@color/tn_font_blue"
            android:textSize="@dimen/_21ssp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/LL1"
        android:gravity="center"
        android:layout_margin="@dimen/_5sdp"
        android:elevation="@dimen/_10sdp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cad_s1"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_60sdp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_15sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_13sdp"
                android:text="@string/tested_tn"
                android:textColor="@color/tn_font_blue"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tested_cases"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="@string/tested_count"
                android:textColor="@color/tn_font_blue"
                android:textSize="@dimen/_22ssp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_rail"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_180sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_15sdp">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_navigation"
                android:elevation="@dimen/_10sdp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_65sdp"
                android:contentDescription="@string/app_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rail"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_40sdp"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quaran"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_22sdp"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total"
                android:layout_gravity="center"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginEnd="@dimen/_25sdp"/>

            <TextView
                android:id="@+id/r_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/count_tot"
                android:layout_gravity="center"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_25sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/active"
                android:layout_gravity="center"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginEnd="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_20sdp"/>

            <TextView
                android:id="@+id/r_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/count_act"
                android:layout_gravity="center"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:textColor="@color/tn_font_blue"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_20sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recovered"
                android:layout_gravity="center"
                android:textSize="@dimen/_11ssp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginEnd="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_40sdp"/>

            <TextView
                android:id="@+id/r_recovered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/count_rec"
                android:layout_gravity="center"
                android:textSize="@dimen/_11ssp"
                android:textStyle="bold"
                android:textColor="@color/green_color"
                android:layout_marginStart="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_40sdp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_credits"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_180sdp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_15sdp">

            <ImageView
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_27sdp"
                android:layout_gravity="center"
                android:elevation="@dimen/_10sdp"
                android:src="@drawable/ic_alert_triangle"
                android:layout_marginBottom="@dimen/_60sdp"
                android:contentDescription="@string/app_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_10sdp"
                android:layout_gravity="center"
                android:text="@string/most_affected"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/yellow"
                android:textAlignment="center"
                android:layout_marginBottom="@dimen/_20sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_10sdp"
                android:layout_gravity="center"
                android:text="@string/city1main"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_10sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_10sdp"
                android:layout_gravity="center"
                android:text="@string/city2main"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_30sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_10sdp"
                android:layout_gravity="center"
                android:text="@string/city3main"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_50sdp"/>

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_180sdp"
                android:layout_gravity="center"
                app:lottie_rawRes="@raw/viruses"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:alpha="0.25"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:id="@+id/explore_updated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:elevation="@dimen/_10sdp"
        android:layout_below="@+id/LL1"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/updated"
        android:textColor="@color/black"
        android:textStyle="bold"/>

</RelativeLayout>